<UserControl x:Class="SortingStatus.UCPrgBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SortingStatus"
             mc:Ignorable="d" 
             d:DesignHeight="{Binding WndHeight}" d:DesignWidth="{Binding WndWidth}" Cursor="Hand">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" FlowDirection="RightToLeft">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblMinimize"   VerticalAlignment="Center" HorizontalAlignment="Right" Content="-" FontWeight="Bold" Grid.Column="0" Cursor="Hand" PreviewMouseDown="lblMinimize_PreviewMouseDown" Margin="0,0,5,0" FontSize="14"  ToolTip="מזער"></Label>
            <CheckBox x:Name="cbTopMost"   VerticalAlignment="Center" HorizontalAlignment="Right"  Grid.Column="1" Cursor="Hand" Checked="cbTopMost_Checked" Unchecked="cbTopMost_Unchecked"  Margin="0,5,5,0"  ToolTip="נעילת מסך">נעילת מסך</CheckBox>
        </Grid>
        <Border  Grid.Row="1">
            <Viewbox VerticalAlignment="Top">
                <Label x:Name="lblHeader"   Content="{Binding WindowHeader, Mode=TwoWay}" Margin="0,0,5,0" VerticalAlignment="Center" ></Label>
            </Viewbox>
       </Border>
        <Grid Margin="1,5,1,5" Grid.Row="2" >
            <ProgressBar Name="progressBar" Margin="0"   Value="0" Foreground="{Binding PbColor, Mode=TwoWay}"  Minimum="0"/>
            <TextBlock Text="{Binding ElementName=progressBar, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" />
         </Grid>
        <Label x:Name="lblProgress" Content="{Binding Progress, Mode=TwoWay}" HorizontalAlignment="Center" Margin="0" Grid.Row="3" VerticalAlignment="Top" ></Label>

    </Grid>
</UserControl>
